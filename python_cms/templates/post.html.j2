{% extends 'base.html.j2' %}
{% block title %} {{ post.title }} {% endblock %}

{% block content %}
{% if post.id is not defined %}
<h1>Post not found</h1>
{% else %}

<form action="/post/delete/{{post.id}}" class="form-group" enctype="multipart/form-data">
  <h1>{{ post.title }} <button class="btn btn-error tooltip" data-tooltip="permanently delete this post">Delete</button>
  </h1>
  {% if post.teaser_image ==""%}
  <img src="{{ url_for('static', filename='default.jpg') }}" class="img-responsive article-image" alt="">
  {% else %}
  <img src="/files/{{post.teaser_image}}" class="img-responsive article-image" alt="">
  {% endif %}
  {{ post.body|safe }}
</form>
{% endif %}
{% endblock %}