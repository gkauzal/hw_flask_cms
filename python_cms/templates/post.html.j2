{% extends 'base.html.j2' %}
{% block title %} {{ post.title }} {% endblock %}

{% block content %}
{% if post.id is not defined %}
<h1>Post not found</h1>
{% else %}

<form class="form-group" enctype="multipart/form-data">
  <h1>{{ post.title }}
    <a class=" btn btn-error tooltip" data-tooltip="permanently delete this post"
      href='https://flaskcms.com:5000/post/delete/{{ post.id }}' ;">Delete</a>
    <a class=" btn btn-primary tooltip" data-tooltip="edit this post"
      href='https://flaskcms.com:5000/post/edit/{{ post.id }}' ;">Edit</a>
  </h1>
  {% if post.teaser_image ==""%}
  <img src="{{ url_for('static', filename='default.jpg') }}" class="img-responsive article-image" alt="">
  {% else %}
  <img src="/files/{{post.teaser_image}}" class="img-responsive article-image" alt="">
  {% endif %}
  {{ post.body|safe }}
</form>
{% endif %}
{% endblock %}