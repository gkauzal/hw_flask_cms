{% extends "base.html.j2" %}
{% block title %}Edit post{% endblock %}

{% block headsource %}
{{ ckeditor.load() }}
{% endblock %}

{% block content %}
<h1>Edit post</h1>

{% for message in get_flashed_messages() %}
<div class="toast toast-success">
    <button class="btn btn-clear float-right"></button>
    {{message}}
</div>
{% endfor %}

<form action="/post/edit/{{post_id}}" method="POST" class="form-group" enctype="multipart/form-data">
    {{ form.csrf_token() }}
    <label for="title">{{ form.title.label }}</label>
    {{ form.title(class="form-input", placeholder="title") }}
    <input type="hidden" value="{{ form.teaser_image.data }}" name="original_teaser_image" id="originalTeaserImage">
    {% if form.teaser_image.data!="" %}
    <label for="teaser_image">{{ form.teaser_image.label }}</label>
    {{ form.teaser_image(class="form-input hidden") }}
    <div class="image-container">
        <img class="article-image" src="{{url_for('pages.files', filename=form.teaser_image.data)}}">
        <input style="float:left; margin:0" type="button" value="Delete image"
            class=" btn btn-error tooltip btn-delete-img">
    </div>
    {% else %}
    {% if form.errors.teaser_image is defined %}
    {% for error in form.errors.teaser_image %}
    <div class="toast toast-error">
        <button class="btn btn-clear float-right"></button>
        {{error}}
    </div>
    {% endfor %}
    {% endif %}
    <label for="teaser_image">{{ form.teaser_image.label }}</label>
    {{ form.teaser_image(class="form-input") }}
    {% endif%}
    <label class="form-label">{{ form.category.label }}</label>
    {% for subfield in form.category %}
    <label class="form-radio form-inline">
        {{ subfield }}
        <i class="form-icon"></i> {{ subfield.label.text }}
    </label>
    {% endfor %}
    <br>
    <label for="body">{{ form.body.label }}</label>
    {{ form.body(class="form-input", placeholder="your article goes here", id='body') }}
    {{ form.submit(class="btn btn-primary input-group-btn float-right", id="createPost", value="Save Post") }}
    {{ ckeditor.config(name='body') }}
    <div class="form-group">
        <label class="form-switch">
            {{ form.promoted() }}
            <i class="form-icon"></i> Promote on main page
        </label>
    </div>
</form>
{% endblock %}

{% block bodysource %}
<script src="{{url_for('static', filename='create_post.js')}}"></script>
{% endblock %}